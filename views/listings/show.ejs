<% layout('layouts/boilerplate') -%>

    <body>
        <h3>ALL Details of your Listing</h3>
        <P>Title : <i>
                <%=listing.title%>
            </i></P>

        <p>Description : <i>
                <%=listing.description%>
            </i></p>
        <p>Image : <img style="width: 250px; height: 200px;" src="<%=listing.img%>" alt="pic">
        </p>
        <p>Price : &#8377 <%=listing.price.toLocaleString("en-IN")%>
        </p>
        <p>Location : <i>
                <%=listing.location%>
            </i>
        </p>
        <p>Country : <i>
                <%=listing.country%>
            </i>
        </p>
        <a href="/listings/<%=listing._id%>/edit">Edit YOUR Listing</a>
        <br><br>
        <form method="post" action="/listings/<%=listing._id%>/?_method=DELETE">
            <button>Delete Listing</button>
        </form>

    </body>