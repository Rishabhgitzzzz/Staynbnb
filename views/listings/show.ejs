<% layout('layouts/boilerplate') -%>

    <body>

        <div class="row">
            <div class="col-8 offset-3 mt-3">
                <h3><i>
                        <%=listing.title%>
                    </i></h3>
            </div>
            <div class="card col-6 offset-3 listing-card">
                <img src="<%=listing.img%>" class="card-img-top show-img" alt="listing">
                <div class="card-body">
                    <p class="card-text">
                    <p>
                        Owned by_<i><B>
                                <%=listing.owner.username%>
                            </B></i>
                    </p>
                    <p> <i>
                            <%=listing.description%>
                        </i></p>
                    <p>Price : &#8377 <%=(listing.price || 0).toLocaleString("en-IN")%>
                    </p>

                    <p>Location : <i>
                            <%=listing.location%>
                        </i>
                    </p>

                    <p>Country : <i>
                            <%=listing.country%>
                        </i>
                    </p>
                    </p>
                </div>

                <% if(currUser && currUser._id.equals(listing.owner._id) ) {%>
                    <div class="btns">
                        <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-md-2 offset-0 edit-btn">Edit
                        </a>

                        <form method="post" action="/listings/<%=listing._id%>/?_method=DELETE">
                            <button class="btn btn-dark  offset-5">Delete</button>
                        </form>
                    </div>
                    <% } %>

            </div>

            <div class="col-8 offset-3 mt-3">
                <% if(currUser ) {%>
                    <hr>
                    <h4>Leave a review</h4>
                    <form method="post" action="/listings/<%=listing._id%>/reviews" class="needs-validation" novalidate>
                        <div class="mt-3">
                            <label for="rating">Rating</label>
                            <input class="form-range" type="range" name="review[rating]" id="rating" min="1" max="5">
                        </div>

                        <div class="mt-3">
                            <label for="comment" class="form-label">Comment</label>
                            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"
                                required></textarea>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please leave a valid Comment.
                            </div>
                        </div>
                        <button class="btn btn-outline-dark mt-3">Submit</button>
                    </form>
                    <% } %>
                        <hr>
                        <h4>All reviews</h4>
                        <div class="row mt-4">
                            <% for(review of listing.reviews) { %>
                                <div class="card col-5 ms-3 mb-3">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            @<%=review.author.username%>
                                        </h5>
                                        <!-- <h6 class="card-subtitle mb-2 text-body-secondary">Card subtitle</h6> -->
                                        <p class="card-text">
                                            <i>
                                                <%=review.comment%>.
                                            </i>
                                        </p>
                                        <p class="card-text">
                                            <i>
                                                <%=review.rating%> Star
                                            </i>
                                        </p>
                                        <form class="mb-3" method="post"
                                            action="/listings/<%=listing._id%>/reviews/<%=review._id%>/?_method=DELETE">
                                            <button class="btn btn-sm btn-dark">Delete</button>
                                        </form>
                                    </div>
                                </div>
                                <% } %>
                        </div>
            </div>

        </div>
        <br><br>

    </body>